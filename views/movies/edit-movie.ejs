<h2>Edit Movie</h2>
<form method="POST" action="/movies/<%=Movie._id%>">
    <label>
        Title:
        <input type="text" name="title" value=<%=Movie.title%>
    </label>

    <label>
        Genre:
        <input type="text" name="genre" value=<%=Movie.genre%>
    </label>

    <label>
        Plot:
        <input type="text" name="plot" value=<%=Movie.plot%>
    </label>

    <label>
        Select Cast:
        <select name="cast" value=<%=Celeb.name%>>        
            <% Celeb.forEach(element => { %>
                <option value=<%=element._id%>><%=element.name%></option>        
            <% }) %>    
        </select>
    </label>
    <button type="submit">Apply changes!</button>
</form>